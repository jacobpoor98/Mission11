@inherits LayoutComponentBase

@* base for the admin pages *@

<div class="bg-info text-white p-2">

    <div class="container-fluid">

        <div class="row">

            <div class="col">
                <span class="navbar-brand m-lg-2">Book Store Administration</span>
            </div>

            @* add ability to log out *@
            <div class="col-2 text-right">
                <a class="btn btn-sm btn-primary" href="/account/logout">Log Out</a>
            </div>

        </div>

    </div>

</div>

<div class="container-fluid">
    <div class="row p-2">

        <div class="col-3">

            @* buttons for navigation in the admin page *@
            <div class="d-grid gap-2">
                <NavLink class="btn btn-outline-primary col-12 p-2 m-2" href="/admin/books"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Books</NavLink>
                <br />
                <NavLink class="btn btn-outline-primary col-12 p-2 m-2" href="/admin/orders"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Orders</NavLink>
            </div>
        </div>

        @* render the body *@
        <div class="col">
            @Body
        </div>
    
    </div>
</div>